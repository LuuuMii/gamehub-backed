<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cmc.mapper.UsersMapper">

    <select id="getUserInfoById" resultType="com.cmc.entity.Users">
        select id,
               username,
               password,
               email,
               phone,
               nickname,
               avatar,
               gender,
               birthday,
               status,
               last_login_time,
               last_login_ip,
               create_time,
               update_time
        from users
        where id = #{id}
    </select>

</mapper>
